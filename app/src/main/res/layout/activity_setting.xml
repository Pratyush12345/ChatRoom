<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/center_Linear_layout"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/default_image"
            android:layout_marginTop="30dp"
            android:id="@+id/setting_image"
            >
        </de.hdodenhof.circleimageview.CircleImageView>
    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Display Name"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/center_Linear_layout"
        android:textSize="30sp"
        android:id="@+id/setting_display_name"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Hi there, I am using ChatRoom"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/setting_display_name"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:id="@+id/setting_status_text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_status_text"
        android:text="CHANGE IMAGE"
        android:id="@+id/setting_image_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:paddingEnd="15dp"
        android:paddingStart="16dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#ffffff"
        android:textSize="15sp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE STATUS"
        android:layout_below="@id/setting_image_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/setting_status_btn"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:textSize="16sp"
        android:backgroundTint="#ffffff"
        android:textColor="@color/colorPrimary"
        />


</RelativeLayout>